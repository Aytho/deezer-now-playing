   {
     "manifest_version": 3,
     "name": "Deezer Now Playing for OBS",
     "version": "1.0",
     "description": "Displays the title currently playing on Deezer for OBS",
     "author": "Aytho",
     "permissions": [
       "storage",
       "tabs",
       "downloads",
       "activeTab"
     ],
     "host_permissions": [
       "https://www.deezer.com/*",
       "http://localhost:*/*"
     ],
     "background": {
       "service_worker": "background.js"
     },
     "content_scripts": [
       {
         "matches": ["https://www.deezer.com/*"],
         "js": ["content.js"]
       }
     ],
      "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Configure Deezer for OBS"
      },
     "icons": {
       "16": "icons/deezer-obs-16.png",
       "32": "icons/deezer-obs-32.png",
       "48": "icons/deezer-obs-48.png",
       "128": "icons/deezer-obs-128.png"
     }
   }
   